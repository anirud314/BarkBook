<div class="post">

    <img src="{{image}}" alt="Jeff's Selfie" title="This is Jeff's puppy selfie">

    <div class="meta">
        <div class="row">
            <div class="col-1 avatar-wrapper">
                <img class="avatar" src="/images/avatar1.png" alt="This is the placeholder for the avatar post"
                    title="Avatar">
            </div>
            <div class="col-6">
                {{title}}
            </div>
        </div>
        <div class="row">
            <div class="col-1 avatar-placeholder"></div>
            <div class="col-6">
                {{#if vote_count}}
                <i class="fas fa-heart"></i>
                {{vote_count}}
                {{/if}}
            </div>
        </div>
    </div>

    <div class="is-pulled-right">
        <b>{{user.username}}</b>
        | {{format_date created_at}} | <a href="/post/{{id}}" id="comment_number">{{comments.length}} {{format_plural
            "comment"
            comments.length}}</a>
    </div>
</div>