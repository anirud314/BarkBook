<div class="comments">
  {{#each this}}
  <div class="row">
    <div class="col-1">
      <img class="avatar" src="https://via.placeholder.com/500x300.png" alt="This is the placeholder for the post image" title="This is the placeholder for the post image">
    </div>
    <div class="col-8">
      <div class="row">
        <div class="col comment-username">{{user.username}}</div>
      </div>
      <div class="row">
        <div class="col comment-comment">{{comment}}</div>
      </div>
      {{body}}
    </div>
  </div>
  {{/each}}
</div>      