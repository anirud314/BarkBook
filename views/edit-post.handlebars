<article>
    <a href="/dashboard" class="is-pulled-right"> &larr; Back to dashboard</a>
    <form class="edit-post-form">
        <h2 class="title mt-5">Edit post</h2>
        <div>
            <label for="post-title">Post title:</label>
            <input class="input" name="post-title" type="text" value="{{post.title}}" />
        </div>
        
        <div>
            <label for="post-content">Post content:</label>
            <input class="textarea" name="post-content" type="text" value="{{post.post_content}}" />
        </div>

        <div>
            <label for="post-image">Image:</label>
            <input type="file" value="{{post.image}}" />
        </div>

        <div class="is-pulled-right">
            created by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}" id="comment_number">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="user-button is-success">save post</button>
        <button type="button" class="user-button is-danger delete-post-btn">delete post</button>
    </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>