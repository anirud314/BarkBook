<div class="column">
    <div class="col main-col logo">
        <img src="/images/image-logo-large.png" width="300px" alt="Bark Book Logo">
    </div>
    <div class="row">
        <div class="col main-col dog"> <img src="/images/image-dog2.png" width="200px" alt="Doggy"> </div>
    </div>

    <form class="signup-form">
        <div class="row">
            <div class="mb-3">
                <input type="email" class="form-control" id="email-signup" placeholder="Your Email">
            </div>
        </div>

        <div class="row">
            <div class="mb-3">
                <input type="string" class="form-control" id="username-signup" placeholder="Create a User Name">
            </div>
        </div>

        <div class="row">
            <div class="mb-3">
                <input type="password" class="form-control" id="password-signup" placeholder="Create a Password">
            </div>
        </div>
        
        <div>
            <button type="submit" class="user-button is-primary">Sign Up!</button>
        </div>
    </form>
</div>

<!-- javascript file-->
<script src="/javascript/signup.js"></script>